<?xml version="1.0" encoding="utf-8"?>
<VisualStudioToolFile
	Name="DX9 Effect Compiler for DDXX"
	Version="8,00"
	>
	<Rules>
		<CustomBuildRule
			Name="Effect Builder for DX9"
			DisplayName="Effect Builder for DX9"
			CommandLine="fxc.exe [AllOptions] [AdditionalOptions]  /Fo$(InputName).fxo $(InputName).fx"
			Outputs="$(InputName).fxo"
			AdditionalDependencies="SharedVariables.hlsl;CommonFunctions.hlsl;DataTypes.hlsl"
			FileExtensions="*.fx"
			ExecutionDescription="Compiling $(InputName).fx..."
			>
			<Properties>
				<StringProperty
					Name="PreprocessorDefinitions"
					DisplayName="Preprocessor definitions"
					Description="Defines a text macro with the given name.     (/D[symbol])"
					Switch="/D&amp;quot;[value]&amp;quot;"
					Delimited="true"
					Inheritable="true"
				/>
				<BooleanProperty
					Name="DisableOptimizations"
					DisplayName="Disable Optimizations"
					Description="Disable optimizations (/Od)"
					Switch="/Od"
				/>
				<BooleanProperty
					Name="EnableDebugging"
					DisplayName="Enable Debugging"
					Description="Enable debugging info (/Zi)"
					Switch="/Zi"
				/>
				<EnumProperty
					Name="MatrixPackOrder"
					DisplayName="Matrix Pack Order"
					Description="Matrix Pack Order (/Zpc or /Zpr)"
					>
					<Values>
						<EnumValue
							Value="0"
							Switch="/Zpc"
							DisplayName="Column Major Mode"
						/>
						<EnumValue
							Value="1"
							Switch="/Zpr"
							DisplayName="Row Major Mode"
						/>
					</Values>
				</EnumProperty>
				<EnumProperty
					Name="TargetProfile"
					DisplayName="Target Profile"
					Description="Target profile (/T profile)"
					>
					<Values>
						<EnumValue
							Value="0"
							Switch="/Tfx_2_0"
							DisplayName="Effect profile"
						/>
						<EnumValue
							Value="1"
							Switch="/Ttx_1_0"
							DisplayName="Procedural texture profile"
						/>
					</Values>
				</EnumProperty>
			</Properties>
		</CustomBuildRule>
	</Rules>
</VisualStudioToolFile>
